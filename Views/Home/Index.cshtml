@{
    ViewData["Title"] = "IP Lookup";
}

@using(Html.BeginForm()) 
{
    <div class="input-group input-group-lg">
        <span class="input-group-text">IP</span>
        <input name="ipAddress" class="form-control" type="text" placeholder="@ViewBag.IPAddress"
            pattern="^((\d{1,2}|1\d\d|2[0-4]\d|25[0-5])\.){3}(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])$" title="Please fill Ipv6">
        <input class="btn btn-primary" type="submit" value="Map Location">
    </div>
}

@if(ViewBag.error){<p class="text-center text-danger">Don't see</p>}

@if(ViewBag.model != null) {
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">IP</th>
                <th scope="col">Map</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.model) {
                <tr>
                    <td>@item.Ip</td>
                    <td><a target="_blank" href="@item.Map">See Map</a></td>
                </tr>
            }
        </tbody>
    </table>
}