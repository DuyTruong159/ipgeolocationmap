@{
    ViewData["Title"] = "IP Lookup";
}

@using(Html.BeginForm()) 
{
    <div class="input-group input-group-lg">
        <span class="input-group-text">IPv6</span>
        <input name="ipAddress" class="form-control" type="text"
            pattern="^(([0-9a-fA-F]{1}|[1-9a-fA-F]{1}[0-9a-fA-F]{1,3}):){7}([0-9a-fA-F]{1}|[1-9a-fA-F]{1}[0-9a-fA-F]{1,3})$" title="Please fill Ipv6">
        <input class="btn btn-primary" type="submit" value="Map Location">
    </div>
}

@if(ViewBag.model != null) {
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">IP</th>
                <th scope="col">Map</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.model) {
                <tr>
                    <td>@item.Ip</td>
                    <td><a target="_blank" href="@item.Map">See Map</a></td>
                </tr>
            }
        </tbody>
    </table>
}
